{
  "layer": "top",
  "position": "top",
  "height": 36,
  "spacing": 4,
  "margin-top": 0,
  "margin-bottom": 0,

  // Choose the order of the modules
  "modules-left": ["custom/hostname", "mpris"],
  "modules-center": ["sway/workspaces", "tray"],
  "modules-right": [
    "custom/audio",
    "backlight",
    "bluetooth",
    "network",
    "cpu",
    "battery",
    "clock",
  ],

  // Configuration for individual modules
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "format": "{name}",
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10,
  },

  "clock": {
    "timezone": "Europe/Warsaw",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon}   {capacity}%",
    "format-charging": "âš¡{capacity}%",
    "format-plugged": "ï‡¦ {capacity}%",
    "format-alt": "{icon}   {capacity}% ({time})",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
    "interval": 10,
    "exec": "~/.config/waybar/scripts/battery.sh",
    "return-type": "text",
  },

  "network": {
    "format-wifi": "ï‡«   {essid} ({signalStrength}%)",
    "format-ethernet": "ïƒ {ifname} Connected",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "âš  Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },


  "cpu": {
      "interval": 10,
      "format": "ï‹›  {}%",
      "max-length": 10
  },


  "custom/audio": {
    "format": "{}",
    "signal": 8,
    "interval": 5,
    "exec": "~/.config/waybar/scripts/audio.sh",
    "on-click": "pavucontrol",
  },

  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"],
  },

  "custom/hostname": {
    "format": "ğŸ–³  {}",
    "exec": "hostnamectl | grep 'Operating System' | cut -d ':' -f2 | xargs",
    "interval": "once",
    "on-click": "/usr/bin/kitty -e /usr/bin/htop",
  },

  "mpris": {
    "format": "{artist} - {title}",
    "format-paused": "â¸  {artist} - {title}",
    "format-stopped": "No music",
    "max-length": 40,
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
  },

  "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "ïŠ” {status}",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": "ïŠ” {num_connections} connected",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
  },
}

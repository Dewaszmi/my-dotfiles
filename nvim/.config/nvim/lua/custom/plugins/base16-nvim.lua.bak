return {
	"RRethy/base16-nvim",
	lazy = false, -- Load immediately so we don't see a "flash" of the wrong colors
	priority = 1000, -- Highest priority to load before all other plugins
	config = function()
		local base16 = require("base16-colorscheme")

		-- Configure the integrations
		base16.with_config({
			telescope = true,
			indentblankline = true,
			notify = true,
			cmp = true,
		})

		-- Enable True Color and set the specific theme
		vim.opt.termguicolors = true
		vim.cmd.colorscheme("default")

		-- Function to handle transparency for a consistent look
		local function apply_transparency()
			local groups = { "Normal", "NonText", "SignColumn", "NormalNC", "EndOfBuffer" }
			for _, group in ipairs(groups) do
				vim.api.nvim_set_hl(0, group, { bg = "NONE", ctermbg = "NONE" })
			end
		end

		-- Apply it now
		apply_transparency()

		-- Re-apply if the colorscheme is manually changed
		vim.api.nvim_create_autocmd("ColorScheme", {
			callback = apply_transparency,
		})
	end,
}
